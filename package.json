{
  "name": "challenge-manager",
  "description": "Kubernetes challenge manager",
  "main": "dist/server.js",
  "repository": "https://github.com/ctfpilot/kube-ctf",
  "author": "tom <tom@tomn.me>",
  "license": "MIT",
  "private": true,
  "release": {
    "branches": [
      "main",
      {
        "name": "develop",
        "prerelease": "r"
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo ${nextRelease.version}",
          "publishCmd": "echo 'Published version ${nextRelease.version}'"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "version.txt"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "scripts": {
    "start": "NODE_ENV=development tsc-watch --onSuccess \"node dist/\"",
    "build": "tsc",
    "lint": "gts lint",
    "prod": "NODE_ENV=production node dist/",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "test": "jest ./src"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.37",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gts": "^3.1.0",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@fastify/request-context": "^4.0.0",
    "@kubernetes/client-node": "^0.17.1",
    "awilix": "^7.0.3",
    "fastify": "^4.6.0",
    "fastify-plugin": "^4.2.1",
    "handlebars": "^4.7.7",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.1.22",
    "node-cache": "^5.1.2",
    "openid-client": "^5.1.9"
  }
}